%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td
          %img.img-rounded{ src: movie.cover, width: "auto", height: "200" }
        %td
          = movie.linked_title
          %p
            = movie.linked_genre
          %p
            = movie.released_at
          %p
            Count of movies:
            = movie.genre.movies_count
          %p= movie.description
          = movie.rating
          = movie.plot
